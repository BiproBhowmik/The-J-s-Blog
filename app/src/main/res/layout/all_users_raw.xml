<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/allUserCardImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_about_creator"
            app:civ_border_color="#000"
            app:civ_border_width="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/allUserCardUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/from_cartoon_block"
                android:paddingTop="3dp"
                android:text="Title goes here..."
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allUserCardEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="Discription goes here..."
                android:textSize="18sp" />



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>